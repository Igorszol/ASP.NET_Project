@model IEnumerable<User>
@{
    ViewData["Title"] = "Index";
}

<h2>Add HR role</h2>
<div>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th scope="col">Email</th>
                <th scope="col">Role</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>        
            @foreach (var user in Model.OrderBy(o=> o.Id))
            {
            <tr>
                <td>@user.Email</td>
                <td>@user.Role</td>
                <td>
                    @using (Html.BeginForm("Change", "User", new { user.Id }, FormMethod.Post, null, new { style = "display:inline;" }))
                    {
                        @Html.AntiForgeryToken()
                        <button class="btn btn-rounded btn-primary mx-2">
                                    <i class="fas fa-retweet pr-2"></i>
                            Change
                        </button>
                    }
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>
